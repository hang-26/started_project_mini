<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/padding_20dp"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <TextView
        android:text="Sign Up"
        android:layout_marginTop="@dimen/margin_10dp"
        android:id="@+id/tv_signup"
        android:textSize="@dimen/size_20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="User name"
        android:paddingStart="@dimen/margin_10dp"
        android:textSize="@dimen/padding_20dp"
        android:id="@+id/edt_username"
        android:background="@drawable/custom"
        android:paddingTop="@dimen/dp15"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/dp15"
        android:layout_below="@+id/tv_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Pass word"
        android:paddingStart="@dimen/margin_10dp"
        android:textSize="@dimen/padding_20dp"
        android:id="@+id/edt_password"
        android:background="@drawable/custom"
        android:paddingTop="@dimen/dp15"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/dp15"
        android:layout_below="@+id/edt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Email"
        android:paddingStart="@dimen/margin_10dp"
        android:id="@+id/edt_email"
        android:background="@drawable/custom"
        android:paddingTop="@dimen/dp15"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/dp15"
        android:layout_below="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Full name"
        android:paddingStart="@dimen/margin_10dp"
        android:id="@+id/edt_fullname"
        android:background="@drawable/custom"
        android:paddingTop="@dimen/dp15"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/dp15"
        android:layout_below="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Address"
        android:paddingStart="@dimen/margin_10dp"
        android:id="@+id/edt_address"
        android:background="@drawable/custom"
        android:paddingTop="@dimen/dp15"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/dp15"
        android:layout_below="@+id/edt_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Birthday"
        android:paddingStart="@dimen/margin_10dp"
        android:id="@+id/edt_birthday"
        android:background="@drawable/custom"
        android:paddingTop="@dimen/dp15"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/dp15"
        android:layout_below="@+id/edt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Phone"
        android:paddingStart="@dimen/margin_10dp"
        android:id="@+id/edt_phone"
        android:background="@drawable/custom"
        android:paddingTop="@dimen/dp15"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/dp15"
        android:layout_below="@+id/edt_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/dp15"
        android:layout_below="@+id/edt_phone"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ViewFlipper
            android:id="@+id/view_flipperr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="SIGN UP"
                android:textSize="@dimen/size_20sp"
                android:textColor="@color/white1"
                android:textStyle="bold"
                android:background="@color/blue1"
                android:id="@+id/tv_btnsignup"
                android:gravity="center"
                android:padding="@dimen/dp15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:indeterminateDrawable="@drawable/custum_progressbar"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </ViewFlipper>

    </androidx.cardview.widget.CardView>



</RelativeLayout>